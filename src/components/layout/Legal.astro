---
import Layout from '../../layouts/Layout.astro';
import { t } from '../../utils/i18n';

export interface Props {
  titleKey: string;
  description: string;
  lang: string;
}

const {
    titleKey,
    description,
    lang
} = Astro.props;
const pageTitle = t(titleKey, lang) + " | "  + t('site.title', lang);
const pageDescription = description;
---

<Layout title={pageTitle} description={pageDescription} lang={lang}>
  <section class="py-16 md:py-24">
    <div class="max-w-container mx-auto px-6">
      <header class="text-center">
        <h1 class="text-h1">{t(titleKey, lang)}</h1>
      </header>

      <article class="prose dark:prose-invert max-w-none mx-auto bg-white dark:bg-neutral-dark p-6 md:p-8 rounded-lg shadow">
        <!-- Custom styles for legal pages. Must be global to apply to children/slots. -->
        <style is:global>
          .prose h2 {
            @apply [&:not(:first-child)]:mt-6 mb-2;
            font-size: clamp(1.5rem, 3vw, 2rem);
          }

          .prose h3 {
            @apply [&:not(:first-child)]:mt-2 mb-1;
            font-size: clamp(1.15rem, 2vw, 1.5rem);
          }

          .prose p {
            @apply my-2;
          }

          .prose ul {
            @apply list-disc list-outside pl-4 mb-3;
          }
        </style>

        <!-- Page content should be added as children JSX elements -->
        <slot />
      </article>
    </div>
  </section>
</Layout>
