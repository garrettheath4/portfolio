---
import Button from '../ui/Buttons.astro';
import { t } from '../../utils/i18n';

interface Props {
  lang: string | undefined;
}

const { lang } = Astro.props;
---

<section class="py-16 md:py-24 bg-neutral-bg dark:bg-neutral-dark/60 text-center">
  <div class="max-w-container mx-auto px-6">
    <div data-aos="fade-up">
      <h2 class="font-heading text-h2 text-secondary dark:text-white mb-6">
        {t('footerCTA.title', lang)}
      </h2>
      <p class="text-secondary/70 dark:text-white/70 max-w-2xl mx-auto mb-8">
        {t('footerCTA.subtitle', lang)}
      </p>

      <Button
        text={t('footerCTA.buttonText', lang)}
        href="#contact"
        variant="primary"
        size="lg"
      />
    </div>
  </div>
</section>
