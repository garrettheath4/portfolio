---
import { t } from '../../utils/i18n';

interface Props {
  lang: string | undefined;
}

const { lang } = Astro.props;
---

<section id="about" class="py-16 md:py-24 bg-neutral-bg dark:bg-neutral-dark/60">
  <div class="max-w-container mx-auto px-6">
    <div class="mb-12 text-center" data-aos="fade-up">
      <h2 class="font-heading text-h2 text-secondary dark:text-white mb-4">{t('values.title', lang)}</h2>
      <p class="text-secondary/70 dark:text-white/70 max-w-2xl mx-auto">
        {t('values.subtitle', lang)}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- KreativitÃ¤t Card -->
      <div
        class="group bg-white dark:bg-neutral-dark border border-gray-100 dark:border-gray-800 rounded-xl p-8 shadow-sm hover:shadow-md transition-all duration-300 transform hover:scale-105 hover:bg-gradient-highlight dark:hover:bg-gradient-to-br dark:hover:from-primary/5 dark:hover:to-orange-500/5"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        <div class="mb-6 text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" role="img" aria-labelledby="creativityIconTitle">
            <title id="creativityIconTitle">{t('values.card1Title', lang)} Icon</title>
            <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"></path>
            <circle cx="12" cy="12" r="3"></circle>
          </svg>
        </div>
        <h3 class="font-heading text-xl text-secondary dark:text-white mb-3 group-hover:text-primary transition-colors duration-300">{t('values.card1Title', lang)}</h3>
        <p class="text-secondary/70 dark:text-white/70">
          {t('values.card1Text', lang)}
        </p>
      </div>

      <!-- Struktur Card -->
      <div
        class="group bg-white dark:bg-neutral-dark border border-gray-100 dark:border-gray-800 rounded-xl p-8 shadow-sm hover:shadow-md transition-all duration-300 transform hover:scale-105 hover:bg-gradient-highlight dark:hover:bg-gradient-to-br dark:hover:from-primary/5 dark:hover:to-orange-500/5"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        <div class="mb-6 text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" role="img" aria-labelledby="structureIconTitle">
            <title id="structureIconTitle">{t('values.card2Title', lang)} Icon</title>
            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
        </div>
        <h3 class="font-heading text-xl text-secondary dark:text-white mb-3 group-hover:text-primary transition-colors duration-300">{t('values.card2Title', lang)}</h3>
        <p class="text-secondary/70 dark:text-white/70">
          {t('values.card2Text', lang)}
        </p>
      </div>

      <!-- Impact Card -->
      <div
        class="group bg-white dark:bg-neutral-dark border border-gray-100 dark:border-gray-800 rounded-xl p-8 shadow-sm hover:shadow-md transition-all duration-300 transform hover:scale-105 hover:bg-gradient-highlight dark:hover:bg-gradient-to-br dark:hover:from-primary/5 dark:hover:to-orange-500/5"
        data-aos="fade-up"
        data-aos-delay="300"
      >
        <div class="mb-6 text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" role="img" aria-labelledby="impactIconTitle">
            <title id="impactIconTitle">{t('values.card3Title', lang)} Icon</title>
            <path d="M12 20v-6M9 20v-4M6 20v-2M15 20v-2M18 20v-4"></path>
            <path d="m4 4 2.5 2.5M19.1 8l-7.2 7.2M15 12V4h-8"></path>
          </svg>
        </div>
        <h3 class="font-heading text-xl text-secondary dark:text-white mb-3 group-hover:text-primary transition-colors duration-300">{t('values.card3Title', lang)}</h3>
        <p class="text-secondary/70 dark:text-white/70">
          {t('values.card3Text', lang)}
        </p>
      </div>
    </div>
  </div>
</section>
