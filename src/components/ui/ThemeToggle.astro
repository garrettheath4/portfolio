---
interface Props {
  id?: string;
}

const { id = "theme-toggle" } = Astro.props;
---

<button 
  id={id} 
  type="button" 
  class="theme-toggle-btn relative inline-flex items-center justify-center w-10 h-10 p-2 rounded-lg text-secondary dark:text-white hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-primary/50"
  aria-label="Toggle Dark Mode"
>
  <!-- Sun icon (displayed in dark mode) -->
  <svg 
    xmlns="http://www.w3.org/2000/svg" 
    class="h-5 w-5 absolute dark:opacity-100 opacity-0 transition-opacity duration-300" 
    viewBox="0 0 24 24" 
    fill="none" 
    stroke="currentColor" 
    stroke-width="1.75" 
    stroke-linecap="round" 
    stroke-linejoin="round"
  >
    <circle cx="12" cy="12" r="5"></circle>
    <line x1="12" y1="1" x2="12" y2="3"></line>
    <line x1="12" y1="21" x2="12" y2="23"></line>
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
    <line x1="1" y1="12" x2="3" y2="12"></line>
    <line x1="21" y1="12" x2="23" y2="12"></line>
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
  </svg>
  
  <!-- Moon icon (displayed in light mode) -->
  <svg 
    xmlns="http://www.w3.org/2000/svg" 
    class="h-5 w-5 absolute opacity-100 dark:opacity-0 transition-opacity duration-300" 
    viewBox="0 0 24 24" 
    fill="none" 
    stroke="currentColor" 
    stroke-width="1.75" 
    stroke-linecap="round" 
    stroke-linejoin="round"
  >
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
  </svg>
</button>

<script>
  // All logic is now in src/scripts/theme-toggle.js
  // This script is processed by Astro due to client:* directives on ThemeToggle component usage.
  import { initializeTheme } from '../../scripts/theme-toggle.js';
  // initializeTheme(); // The script itself calls initializeTheme on DOMContentLoaded or immediately.
  // So, just importing it should be enough for it to be bundled and run.
  // If initializeTheme needs to be called explicitly per component instance, that's different.
  // But the script is designed to run once and affect all .theme-toggle-btn elements.
  // For Astro, client-side scripts in .astro files are bundled. If this script tag is empty
  // or only contains imports, Astro might optimize it away unless the import has side effects
  // or is used. The `initializeTheme()` call within theme-toggle.js itself handles execution.
  // To ensure the module is evaluated, we can just have the import.
</script>
