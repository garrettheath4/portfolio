---
import IndexPage from '../../components/pages/IndexPage.astro';

// Generate static paths for supported locales
export async function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'nl' } },
    { params: { lang: 'de' } },
  ];
}

const lang = Astro.params.lang || Astro.currentLocale || 'en';
---

<IndexPage lang={lang} />
